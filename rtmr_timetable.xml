<?xml version="1.0" encoding="UTF-8" ?>
<rtmr>
   <!-- ./run_timer.py auto 9600 N 0 sunset sunrise -->
   <modbus>
      <!-- stairwell lights -->
      <device id="MB_4" lbl="MODBUS_4" address="4" ttydev=";auto;9600;N;8;1;">
         <gpio enabled="on" id="0" lbl="CH1" note="Staircase B - ">
            <schedule>
               <item day="Monday" on="6:50" off="18:10" />
               <item day="Tuesday" on="6:50" off="18:10" />
               <item day="Wednesday" on="6:50" off="18:10" />
               <item day="Thursday" on="6:50" off="20:10" />
               <item day="Friday" on="6:50" off="18:10" />
               <item day="Saturday" on="6:50" off="14:10" />
               <item day="Sunday" on="" off="" />
            </schedule>
         </gpio>
         <gpio enabled="on" id="1" lbl="CH2" note="Staircase B - ">
            <schedule>
               <item day="Monday" on="6:50" off="18:10" />
               <item day="Tuesday" on="6:50" off="18:10" />
               <item day="Wednesday" on="6:50" off="18:10" />
